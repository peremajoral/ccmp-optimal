{
  "auto_sync": {
    "enabled": true,
    "github_integration": true,
    "supermemory_integration": true
  },
  "zen_commit": {
    "enabled": true,
    "auto_validate": true,
    "trigger_on": {
      "file_count_threshold": 3,
      "critical_files": [
        ".claude/scripts/*",
        "*.json",
        "*.config.*",
        "*hooks*",
        "package.json",
        "tsconfig.json",
        "*.env*"
      ],
      "commit_types": ["feat", "breaking", "major", "refactor", "security"]
    }
  },
  "deliverables": {
    "patterns": [
      "src/components/*.{vue,astro,tsx,jsx}",
      "src/pages/*.{astro,tsx}",
      "src/services/*.{js,ts}",
      "tests/**/*.test.{js,ts}",
      "docs/*.md"
    ]
  },
  "quality_gates": {
    "lint": true,
    "typecheck": true,
    "test": true,
    "build": true
  },
  "github": {
    "auto_merge": true,
    "require_ci": true,
    "target_branch": "main"
  }
}
